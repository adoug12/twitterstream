doctype html
html
  head
    meta(charset='utf-8')
    title Twitter Feed
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/styles.css')
    body
      .container
        nav.navbar.navbar-light.bg-light
          span.navbar-brand Twitter Sentiment
        .row
          .col-6
            form#queryForm(action='javascript:submitQuery()', method='post')
              .input-group
                .input-group-prepend
                  button.btn.btn-sm.btn-primary(type='submit') Submit
                input.form-control.form-control-sm#words(type='text', name='words', placeholder='Enter your words...')
            .tweet-feed#tweetContainer
          .col-6#statsContainer
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='js/feed.js')