doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Twitter Sentiment
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/styles.css')
    body
      .site-wrapper
        .site-wrapper-inner
          .cover-container
            .inner.cover
              h1.cover-heading Twitter Sentiment
              p.lead Enter the hashtags you with to analyze.
              form#queryForm
                input.form-control.mb-4#words(type='text', name='words')
              button.btn.btn-primary.mb-4#mainButton(type='button', onclick='submitQuery()') Submit
              div#results
                if latestQuery
                  h4 Latest Search
                  p #{latestQuery.hashtags}
                if unhappyTweet
                  h4 Most Negative Recent Tweet
                  p "#{unhappyTweet.text}"
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='js/feed.js')